{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@practice/utils": ["./packages/utils/src"],
      "@practice/utils/*": ["./packages/utils/src/*"],
    }
  }
}